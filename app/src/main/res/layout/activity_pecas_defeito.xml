<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD0000"
    android:orientation="vertical"
    tools:context=".Activity.PecasDefeito">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/stepbarokok34"
            android:layout_gravity="center"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECIONE A PARTE DO CARRO"
        android:textStyle="bold"
        android:textColor="#f0f0f0"
        android:textAlignment="center"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/iBtCarFrente"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="33dp"
            android:background="#DD0000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/carrofrente"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="10dp" />

        <ImageButton
            android:id="@+id/iBtCarTraseira"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:background="#DD0000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/carrotraseira"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="10dp" />

        <ImageButton
            android:id="@+id/iBtCarEsquerda"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="182dp"
            android:background="#DD0000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/carrolateralesquerda"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="150dp" />

        <ImageButton
            android:id="@+id/iBtCarDireita"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/iBtCarEsquerda"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="82dp"
            android:layout_marginLeft="82dp"
            android:layout_marginTop="160dp"
            android:background="#DD0000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/carrolateraldireita"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="300dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btConcluiOrçamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:text="Concluir Orçamento"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>


</LinearLayout>