<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DD0000"
    android:orientation="vertical"
    tools:context=".Activity.CadastroVeiculo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/stepbarok234" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="CADASTRO DE VEÍCULO"
        android:textAlignment="center"
        android:textColor="#f0f0f0"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Spinner
            android:id="@+id/spModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Spinner
            android:id="@+id/spCor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <Spinner
            android:id="@+id/spPintura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="69dp"
                android:layout_marginLeft="69dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="255dp"
                android:layout_marginRight="255dp"
                android:padding="10dp"
                android:text="PLACA:"
                android:textColor="#f0f0f0"
                android:textSize="20dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="0dp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/etLetras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="159dp"
                android:layout_marginLeft="159dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="185dp"
                android:layout_marginRight="185dp"
                android:background="#c0c0c0"
                android:maxLength="3"
                android:hint="XXX"
                android:inputType="textCapCharacters"
                app:bootstrapBrand="regular"
                app:bootstrapSize="xl"
                app:roundedCorners="true"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="144dp"
                tools:layout_editor_absoluteY="4dp" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/etNumeros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="238dp"
                android:layout_marginLeft="238dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="98dp"
                android:layout_marginRight="98dp"
                android:background="#c0c0c0"
                android:maxLength="4"
                android:hint="0000"
                android:inputType="number"
                app:bootstrapBrand="regular"
                app:bootstrapSize="xl"
                app:roundedCorners="true"
                tools:ignore="DuplicateIds,MissingConstraints"
                tools:layout_editor_absoluteX="236dp"
                tools:layout_editor_absoluteY="4dp" />

        </RelativeLayout>

    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnregistrar"
        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
            android:text="Registrar Veículo"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true" />
</LinearLayout>
