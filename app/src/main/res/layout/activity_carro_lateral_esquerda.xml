<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DD0000"
    android:orientation="vertical"
    tools:context=".Activity.Qrcode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/carrolateralesquerda" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="PEÇAS COM DEFEITO"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#f0f0f0"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbPLDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Pára-Lama Dianteiro"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SPLDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbPLTraseiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Pára-Lama Traseiro"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SPLTraseiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFrisoPLDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Friso Dianteiro"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFrisoPLDianteiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFrisoPLTraseiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Friso Traseiro"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFrisoPLTraseiro"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbRodaDianteira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Roda Dianteira"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SRodaDianteira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbRodaTraseira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Roda Traseira"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SRodaTraseira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbRetrovisor"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Retrovisor"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SRetrovisor"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbPorta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Porta"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SPorta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbMaçaneta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Maçaneta"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SMaçaneta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbFrisoPorta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Friso da Porta"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SFrisoPorta"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbColunaCentral"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Coluna Central"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SColunaCentral"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbColunaDianteira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Coluna Dianteira"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SColunaDianteira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbColunaTraseira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:buttonTint="#f0f0f0"
                    android:text="Coluna Traseira"
                    android:textColor="#f0f0f0"
                    android:textSize="16dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical" />

                <Spinner
                    android:id="@+id/SColunaTraseira"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btOrçamentoLD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:text="Adicionar ao Orçamento"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>
</LinearLayout>